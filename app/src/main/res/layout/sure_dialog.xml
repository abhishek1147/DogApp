<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/load_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dialog_icon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_dialog_shape"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/main_dog_icon"/>

    <Button
        android:id="@+id/yes_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textAllCaps="false"
        android:background="@drawable/confirm_shape"
        android:textSize="30sp"
        android:layout_below="@id/dialog_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        />

    <Button
        android:id="@+id/no_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        android:background="@drawable/cancel_shape"
        android:textSize="30sp"
        android:layout_below="@id/dialog_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        />


</RelativeLayout>