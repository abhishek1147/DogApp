<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg__dialog_shape">

    <TextView
        android:id="@+id/cam_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Choose action"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cam_dialog_title"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cam_dialog_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:tint="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/gallery_dialog_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_photo_black_24dp"
            android:tint="@color/colorPrimary" />

    </LinearLayout>

</RelativeLayout>