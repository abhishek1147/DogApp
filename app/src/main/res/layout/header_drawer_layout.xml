<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawer_profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/person_icon_24"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/drawer_profile_pic"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomer Shitrit"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dog Owner"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"/>
    </LinearLayout>

    <!--<ImageView
        android:id="@+id/img_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/person_icon_24" />

    <TextView
        android:id="@+id/navigation_header_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/img_view"
        android:text="Tomer Shitrit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25sp" />-->
</RelativeLayout>