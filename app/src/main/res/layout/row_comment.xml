<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/shutterstock_648907024" />


    <RelativeLayout
        android:id="@+id/comment_card_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/comment_img"
        android:background="@drawable/bottom_sheet_comments_card_shape"
        android:padding="10dp">


        <TextView
            android:id="@+id/name_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_comment_tv"
            android:paddingVertical="2dp"
            android:text="Actual comment"
            android:textColor="@color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_card_details_layout"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/comment_img"
        android:paddingHorizontal="2dp"
        android:text="10/10/2020" />

</RelativeLayout>