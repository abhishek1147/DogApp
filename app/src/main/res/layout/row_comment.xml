<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/shutterstock_648907024" />

        <TextView
            android:id="@+id/name_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/comment_img"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_comment_tv"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/comment_img"
            android:text="Actual comment"
            android:paddingVertical="2dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/time_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_comment_tv"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/comment_img"
            android:text="10/10/2020" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>