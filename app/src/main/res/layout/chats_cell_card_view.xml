<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/whitish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_cell_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/shutterstock_648907024" />

        <TextView
            android:id="@+id/chat_cell_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:12"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/chat_cell_image"
            android:layout_centerVertical="true"
            >

        <TextView
            android:id="@+id/chat_cell_username"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="יפרח מגייף גונסון" />

        <TextView
            android:id="@+id/chat_cell_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="סבבה אחפש עוד מעט" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>